.image-container
  = image_tag 'Rectangle.png'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :Account
      %br/
      = f.text_field :account, autofocus: true, autocomplete: "account-name", class: 'text'
    .field
      = f.label :Email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :Password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'
  = link_to "Log in", new_session_path(resource_name)
