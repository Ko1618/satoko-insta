.top_image 
  = image_tag 'Rectangle.png'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :account, class: 'form_text'
      %br/
      = f.text_field :account, class: 'form'
    .field
      = f.label :email, class: 'form_text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form'
    .field
      = f.label :password, class: 'form_text'
      = f.password_field :password, autocomplete: "new-password", class: 'form'
    .field
      = f.label :password_confirmation, class: 'form_text'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'submit_btn'
  = render "devise/shared/links"
  = link_to 'TOP', root_path, class: 'link_to_top'
